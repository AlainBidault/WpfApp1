                        <TextBlock HorizontalAlignment="Left" Margin="340,114,0,0" TextWrapping="Wrap" Text="{Binding Path=Qqn.Nom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top"/>
